<main class="pt-3 bg-body-tertiary">
  <div class="w-75 mx-auto">
    <div class="d-flex justify-content-between align-items-center my-2">
      <h1 class="ms-4">Upload New Image</h1>
      <div class="d-flex justify-content-end me-4">
        <%= link_to 'Back to Gallery', images_path, class: 'btn btn-secondary' %>
      </div>
    </div>
    <%= form_with model: @image, local: true, html: { multipart: true }, class: 'w-50 mx-auto mt-5' do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group mt-1">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group mt-1">
        <%= form.label :img_file %>
        <%= form.file_field :img_file, class: 'form-control' %>
      </div>

      <div class="w-100 d-flex justify-content-end">
        <%= form.submit 'Upload', class: 'btn btn-primary mt-3 me-0' %>
      </div>
    <% end %>
  </div>
</main>