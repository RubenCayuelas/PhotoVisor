<main class="pb-5 pt-2 bg-body-tertiary">
  <div class="d-flex justify-content-between align-items-center my-2">
    <h1 class="ms-4"><%= @image.title %></h1>
    <div class="d-flex justify-content-end me-4">
      <%= link_to 'Back to Gallery', images_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="w-100 d-flex justify-content-center">
    <% if @image.img_file.url.present? %>
      <%= image_tag( @image.img_file.url, class: 'img-fluid') %>
    <% else %>
      <p>No image available</p>
    <% end %>
  </div>

  <div class="mt-3">
    <p class="mx-4"><%= @image.description %></p>
    <div class="d-flex justify-content-between align-items-center my-2 mx-5">
      <div class="d-flex justify-content-end me-4">
        <%= link_to 'Delete', image_path(@image), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger me-3' %>
        <%= link_to 'Back to Gallery', images_path, class: 'btn btn-secondary' %>
      </div>
      <p>Uploaded at: <%= @image.uploaded_at.strftime('%d/%m/%Y - %H:%Mh') %></p>
    </div>
  </div>
</main>