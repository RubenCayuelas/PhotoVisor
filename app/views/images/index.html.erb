
<h1>Photo Visor</h1>
<%= link_to 'Upload New Image', new_image_path, class: 'btn btn-outline-secondary btn-sm ms-3' %>
<div class="row">
  <% @images.each do |image| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <%= image_tag image.img_file.url, class: 'card-img-top' if image.img_file? %>
        <div class="card-body">
          <h5 class="card-title"><%= image.title %></h5>
          <p class="card-text"><%= truncate(image.description, length: 100) %></p>
          <%= link_to 'View Details', image_path(image), class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>